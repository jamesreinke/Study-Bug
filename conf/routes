# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index(msg: String ?= "")

POST	/login						controllers.Authentication.loginPost

POST 	/register					controllers.Authentication.registerPost

POST 	/forget 					controllers.Authentication.forgetPost

GET		/logout						controllers.Authentication.logout

GET		/database					controllers.Problem.database

GET		/profile					controllers.Profile.index

GET		/stats						controllers.Profile.stats

GET 	/topic 						controllers.Topic.get(id: Long ?= 0L)
DELETE 	/topic 						controllers.Topic.delete(id: Long ?= 0L)
POST 	/topic 						controllers.Topic.create(contents: String ?= "", parent: Long ?= 0L)
PUT 	/topic 						controllers.Topic.update(id: Long ?= 0L, contents: String ?= "", parent: Long ?= 0L)

GET 	/subtopic	 				controllers.Subtopic.get(id: Long ?= 0L)
DELETE 	/subtopic	 				controllers.Subtopic.delete(id: Long ?= 0L)
POST 	/subtopic					controllers.Subtopic.create(contents: String ?= "", hint: String ?= "")
PUT 	/subtopic					controllers.Subtopic.update(id: Long ?= 0L, contents: String ?= "", hint: String ?= "")


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file: String)
